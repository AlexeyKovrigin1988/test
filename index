<?php

/*Нужно вывести лесенкой числа от 1 до 100.
1
2 3
4 5 6
...*/

$arr = array();
for($z = 1; $z <= 99; $z++) {
    array_push($arr, $z);

$htm = '';
$q = 0;
for($i = 0; $i < sizeof($arr); $i++) {
    for($k = $i; $k >= 0; $k--) {
        // Проверка что индекс массива q существует в массиве arr
        if (array_key_exists($q, $arr)) {
            $htm .= $arr[$q] . ' ';
            $q++;
        } else {
            break;
        }
    }
    // Проверка на переполнение массива, если индекса q не существует в массиве arr, то прервать выполнение цикла.
    if (array_key_exists($q, $arr)) {
        $htm = $htm . '<br>';
    } else {
        break;
    }
}};
echo $htm;

/*Нужно заполнить массив 5 на 7 случайными уникальными числами от 1 до 1000.
Вывести получившийся массив и суммы по строкам и по столбцам.*/

$arr=[];
for($i=0;$i<5;$i++){
    for($j=0;$j<7;$j++){
        $arr[$i][$j] = rand(1,1000);
    }
}

echo '<pre>';
print_r($arr);
echo '<pre>';


echo 'Сумма строк первого массива: ' . $sumRow  = array_sum($arr[0]) . '<br>';
echo 'Сумма строк второго массива: ' . $sumRow  = array_sum($arr[1]) . '<br>';
echo 'Сумма строк третьего массива: ' . $sumRow  = array_sum($arr[2]) . '<br>';
echo 'Сумма строк четвёртого массива: ' . $sumRow  = array_sum($arr[3]) . '<br>';
echo 'Сумма строк пятого массива: ' . $sumRow  = array_sum($arr[4]) . '<br>';
echo '<br>';
echo 'Сумма первого столбца: ' . $sumCol = array_sum(array_column($arr, 0)) . '<br>';
echo 'Сумма второго столбца: ' . $sumCol = array_sum(array_column($arr, 1)) . '<br>';
echo 'Сумма третьего столбца: ' . $sumCol = array_sum(array_column($arr, 2)) . '<br>';
echo 'Сумма четвёртого столбца: ' . $sumCol = array_sum(array_column($arr, 3)) . '<br>';
echo 'Сумма пятого столбца: ' . $sumCol = array_sum(array_column($arr, 4)) . '<br>';
echo 'Сумма шестого столбца: ' . $sumCol = array_sum(array_column($arr, 5)) . '<br>';
echo 'Сумма седьмого столбца: ' . $sumCol = array_sum(array_column($arr, 6)) . '<br>';
?>

<!--На страницу контактов заходят люди из разных городов, нужно чтобы они видели телефон из своего города.
По умолчанию, в HTML-страницы прописан телефон 8-800-DIGITS. Телефон размещен в верху и внизу страницы.-->

<head>
    <script src="http://code.jquery.com/jquery-1.10.2.min.js" type="text/javascript"></script>
    <script src="https://api-maps.yandex.ru/2.0/?load=package.full&lang=ru-RU" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function(){
            ymaps.ready(function(){
                var geolocation = ymaps.geolocation;
                $('#cou').html('Ваша страна: '+geolocation.country);
                $('#tow').html('Ваш город: '+geolocation.city);
                $('#reg').html('Ваш регион: '+geolocation.region);
            });
        });
    </script>
</head>

<script>
    window.onload = function() {
        // Указываем город (учавствующий в подмене). Написать город без ошибок
        if (ymaps.geolocation.city == 'Москва') {
            jQuery("#city1").show();
            jQuery("#no-city1").hide();
        } else {
            jQuery("#city1").hide();
            jQuery("#no-city1").hide();
        }

        // Указываем город (учавствующий в подмене) Написать город без ошибок
        if (ymaps.geolocation.city == 'Челябинск') {
            jQuery("#city2").show();
            jQuery("#no-city2").hide();
        } else {
            jQuery("#city2").hide();
            jQuery("#no-city2").hide();
        }

        // Указываем город (учавствующий в подмене) Написать город без ошибок
        if (ymaps.geolocation.city == 'Краснодар') {
            jQuery("#city3").show();
            jQuery("#no-city3").hide();
        } else {
            jQuery("#city3").hide();
            jQuery("#no-city3").hide();
        }

        // Указываем город (учавствующий в подмене) Написать город без ошибок
        if (ymaps.geolocation.city == 'Екатеринбург') {
            jQuery("#city4").show();
            jQuery("#no-city4").hide();
        }  else {
            jQuery("#city4").hide();
            jQuery("#no-city4").hide();
        }


    }
</script>

<!-- Показываем основной номер -->
<div id="phone">Номер по умолчанию 8-800-DIGITS</div>

<!-- Показываем блок с доп. номером если город совпадает -->
<div id="city1">Москва 495</div>
<!-- Показываем блок с доп. номером если город совпадает -->
<div id="city2">Челябинск 351</div>
<!-- Показываем блок с доп. номером если город совпадает -->
<div id="city3">Краснодар 861</div>
<!-- Показываем блок с доп. номером если город совпадает -->
<div id="city4">Екатеринбург 343</div>
